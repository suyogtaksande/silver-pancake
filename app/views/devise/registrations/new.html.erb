
<div class="col-md-4 col-md-offset-4">
  <div class="login-wrapper">
    <div class="box">
      <div class="content-wrap">
        <h6>Sign Up</h6>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <%= f.email_field :email, autofocus: true, :class=>"email_field form-control", :placeholder=>"E-mail address required" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", :class=>"password_field form-control required", :placeholder=>"Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"password_field form-control required", :placeholder=>"Confirm Password" %>
          <div class="action">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="already">
      <p>Have an account already?</p>
      <a href="<%= new_user_session_path %>">Login</a>
    </div>
  </div>
</div>